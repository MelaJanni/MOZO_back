rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // üöÄ CR√çTICO: Permitir lectura p√∫blica para QR pages (SOLUCI√ìN AL DELAY)
    match /tables/{tableId}/waiter_calls/{callId} {
      allow read: if true;  // ‚úÖ Lectura p√∫blica para tiempo real
      allow write: if false; // ‚ùå Solo backend puede escribir
    }
    
    match /tables/{tableId}/status/{document} {
      allow read: if true;   // ‚úÖ Estado de mesa p√∫blico
      allow write: if false; // ‚ùå Solo backend
    }
    
    match /active_calls/{callId} {
      allow read: if true;   // ‚úÖ Llamadas activas p√∫blicas
      allow write: if false; // ‚ùå Solo backend
    }
    
    // Para mozos autenticados
    match /waiters/{waiterId}/calls/{callId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Para administradores/businesses
    match /businesses/{businessId}/waiter_calls/{callId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Tests de latencia (temporales)
    match /latency_tests/{testId} {
      allow read, write: if true;
    }
    
    match /performance_tests/{path=**} {
      allow read, write: if true;
    }
  }
}